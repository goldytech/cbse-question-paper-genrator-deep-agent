{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "cbse_question_paper_format",
  "title": "CBSE Question Paper Output Format",
  "description": "JSON Schema defining the structure of generated question papers",
  "type": "object",
  "properties": {
    "blueprint_version": {
      "type": "string",
      "description": "Schema version of the blueprint used"
    },
    "exam_metadata": {
      "type": "object",
      "properties": {
        "board": {"type": "string"},
        "class_level": {"type": "integer", "minimum": 1, "maximum": 12},
        "subject": {"type": "string"},
        "exam_type": {"type": "string"},
        "total_marks": {"type": "integer"},
        "duration_minutes": {"type": "integer"},
        "academic_year": {"type": "string"}
      },
      "required": ["board", "class_level", "subject", "total_marks", "duration_minutes", "academic_year"]
    },
    "syllabus_scope": {
      "type": "object",
      "properties": {
        "chapters_included": {"type": "array", "items": {"type": "string"}},
        "topics": {"type": "object", "additionalProperties": {"type": "array", "items": {"type": "string"}}}
      },
      "required": ["chapters_included"]
    },
    "sections": {
      "type": "array",
      "description": "Array of question paper sections",
      "items": {
        "type": "object",
        "properties": {
          "section_id": {"type": "string"},
          "title": {"type": "string"},
          "questions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "question_text": {"type": "string"},
                "chapter": {"type": "string"},
                "topic": {"type": "string"},
                "question_format": {"type": "string"},
                "marks": {"type": "integer"},
                "options": {"type": "array", "items": {"type": "string"}},
                "correct_answer": {"type": "string"},
                "difficulty": {"type": "string"},
                "bloom_level": {"type": "string"},
                "tags": {"type": "array", "items": {"type": "string"}}
              },
              "required": ["question_text", "chapter", "topic", "question_format", "marks", "difficulty", "bloom_level", "tags"]
            }
          },
          "total_marks": {"type": "integer"},
          "required": ["section_id", "questions", "total_marks"]
        }
      },
      "required": ["section_id", "questions", "total_marks"]
    },
    "total_marks": {
      "type": "integer",
      "description": "Total marks for the paper"
    },
    "generation_metadata": {
      "type": "object",
      "properties": {
        "generation_id": {"type": "string"},
        "generated_at": {"type": "string", "format": "date-time"},
        "schema_version": {"type": "string"},
        "difficulty_distribution": {
          "type": "object",
          "properties": {
            "easy": {"type": "number", "minimum": 0, "maximum": 100},
            "medium": {"type": "number", "minimum": 0, "maximum": 100},
            "hard": {"type": "number", "minimum": 0, "maximum": 100}
          }
        },
        "validation_status": {"type": "string", "enum": ["valid", "partial", "invalid"]},
        "validation_errors": {"type": "array", "items": {"type": "string"}}
      }
    }
  },
  "required": ["blueprint_version", "exam_metadata", "sections", "total_marks"],
  "additionalProperties": false
}